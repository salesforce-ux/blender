    { "name": "action",    "unitSize": 18, "longestDimension": 36,  "src": "./test/icons/actions"},
    { "name": "custom",    "suffix": "_anchor",  "unitSize": 48, "longestDimension": 120, "src": "./test/icons/custom"},
    { "name": "standard",  "suffix": "_anchor",  "unitSize": 48, "longestDimension": 120, "src": "./test/icons/standard/svg"},
    { "name": "custom",    "suffix": "_list",    "unitSize": 32, "longestDimension": 120, "src": "./test/icons/custom"},
    { "name": "standard",  "suffix": "_list",    "unitSize": 32, "longestDimension": 120, "src": "./test/icons/standard/svg"}
